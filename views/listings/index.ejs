<% layout("layouts/boilerplate") %>

<h3>All Listings</h3>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
  <% for (let listing of allListings) { %>

    <div class="col">
      <div class="card h-100">
        
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <img src="<%= listing.image.url  || listing.image %>" class="card-img-top" style="height: 20rem; object-fit: cover;">
        
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br>
           &#x20B9;<%= listing.price ? listing.price.toLocaleString("en-IN") : "0" %> / night

            

          </p>
          <a href="/listings/<%= listing._id %>" class="btn btn-primary">View Listing</a>
        </div>

      </div>
      </a>
    </div>

  <% } %>
</div>

